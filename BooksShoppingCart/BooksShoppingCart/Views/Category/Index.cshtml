@model List<Category>
<figure>
    <blockquote class="blockquote">
        <p class="mb-0">
            This is a category page. This page would be used by Admin to add any new category
            for books.
        </p>

    </blockquote>
    <figcaption class="blockquote-footer">
        This is Admin <cite title="Source Title">Admin role required</cite>
    </figcaption>
</figure>

<a asp-controller="Category" asp-action="Create">
    Create Category
</a>
<div></div>
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Category Id</th>
            <th scope="col">Category Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var i in Model)
        {
            <tr class="table-success">
                <td>@i.CategoryId</td>
                <td>@i.CategoryName</td>
                <td>
                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@i.CategoryId">Edit</a>
                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@i.CategoryId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
